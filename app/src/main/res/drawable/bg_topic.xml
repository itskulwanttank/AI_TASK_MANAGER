<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
<!--            <solid android:color="#FFFFFF" /> &lt;!&ndash; Background color &ndash;&gt;-->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>

    <!-- Border -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent color for the center area -->
            <stroke
                android:width="2dp"
            android:color="#FF000000" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Corner radius (should match the background) -->
        </shape>
    </item>

</layer-list>
