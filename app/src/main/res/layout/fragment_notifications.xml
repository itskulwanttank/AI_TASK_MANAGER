<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is AI Task Manager?"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Task Manager is a productivity app designed to help you manage your tasks efficiently using artificial intelligence technology."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Can I sync tasks across multiple devices?"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes, AI Task Manager offers synchronization capabilities, allowing you to access your tasks from any device."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is the 'Ask AI' feature?"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The 'Ask AI' feature allows users to select random topics related to productivity and time management techniques. The app then generates relevant content on the chosen topic."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Can I request specific topics for the 'Ask AI' feature?"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currently, the 'Ask AI' feature randomly selects topics, but we are working on implementing a feature that allows users to request specific topics in future updates."
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"/>

    </LinearLayout>
</ScrollView>